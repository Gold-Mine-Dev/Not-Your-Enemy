<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33333333"
    tools:context="com.ldi19.notyourenemy.Fragment_02_BeliefSelect"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/intro_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:clickable="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="false"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/belief_selesct_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="#55000000">
            <TextView
                android:id="@+id/belief_select_title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:textColor="#FFFFFF"
                android:paddingLeft="20sp"
                android:textSize="35sp"
                android:text=" YOU "
                />
            <TextView
                android:id="@+id/belief_select_subtitle_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:textColor="#FFFFFF"
                android:paddingLeft="0sp"
                android:textSize="13sp"
                android:text=" SELECT BELIEF "
                android:alpha="0.75"
                />
            <View
                android:id="@+id/gap_view_l"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"/>
            <ImageButton
                android:id="@+id/belief_select_question_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:padding="20dp"
                android:background="@android:color/transparent"
                android:alpha="0.55"
                android:src="@drawable/question"/>
            <View
                android:id="@+id/gap_view_r"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"/>
            <TextView
                android:id="@+id/belief_select_subtitle_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textColor="#FFFFFF"
                android:paddingRight="0sp"
                android:textSize="13sp"
                android:text=" SELECT BELIEF "
                android:alpha="0.75"
                />
            <TextView
                android:id="@+id/belief_select_title_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textColor="#FFFFFF"
                android:paddingRight="20sp"
                android:paddingLeft="0sp"
                android:textSize="35sp"
                android:text="ME "
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="#55000000">
            <RelativeLayout
                android:gravity="center"
                android:background="@color/colorIslam"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/belief_select_you_islam"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="#A3000000"
                    android:textSize="27dp"
                    android:text="ISLAM"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/suggested_you_islam"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:src="@drawable/suggested"
                    android:paddingTop="65dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:background="@drawable/top_right_belief_select_corner"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/belief_select_you_atheist"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="#A3000000"
                    android:textSize="27dp"
                    android:text="SECULAR"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/suggested_you_atheist"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:src="@drawable/suggested"
                    android:paddingTop="65dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"
                />

            <RelativeLayout
                android:gravity="center"
                android:background="@drawable/top_left_belief_select_corner"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/belief_select_me_atheist"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="#A3000000"
                    android:textSize="27dp"
                    android:text="SECULAR"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/suggested_me_atheist"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:src="@drawable/suggested"
                    android:paddingTop="65dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:background="@color/colorIslam"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/belief_select_me_islam"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="#A3000000"
                    android:textSize="27dp"
                    android:text="ISLAM"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/suggested_me_islam"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:src="@drawable/suggested"
                    android:paddingTop="65dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <RelativeLayout
                android:gravity="center"
                android:background="@color/colorHindu"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/belief_select_you_hindu"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="#A3000000"
                    android:textSize="27dp"
                    android:text="HINDU"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/suggested_you_hindu"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:src="@drawable/suggested"
                    android:paddingTop="65dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:background="@color/colorChristian"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/belief_select_you_christian"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="#A3000000"
                    android:textSize="27dp"
                    android:text="CHRISTIAN"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/suggested_you_christian"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:src="@drawable/suggested"
                    android:paddingTop="65dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"
                android:background="#55000000"/>

            <RelativeLayout
                android:gravity="center"
                android:background="@color/colorChristian"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/belief_select_me_christian"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="#A3000000"
                    android:textSize="27dp"
                    android:text="CHRISTIAN"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/suggested_me_christian"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:src="@drawable/suggested"
                    android:paddingTop="65dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:background="@color/colorHindu"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/belief_select_me_hindu"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="#A3000000"
                    android:textSize="27dp"
                    android:text="HINDU"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/suggested_me_hindu"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:src="@drawable/suggested"
                    android:paddingTop="65dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="false"
        android:layerType="software"
        android:visibility="gone"
        android:background="@drawable/divider_dotted_line_horizontal" />
</FrameLayout>
